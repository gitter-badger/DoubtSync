<% @events.each do |event| %>
<div class="panel-group" id="accordion">
  <div class="panel panel-default">
    <div class="panel-heading">
          <h4 class="panel-title">
          <a data-toggle="collapse" data-parent="#accordion" href="#event<%= event.id %>" class="collapsed">
          <%= event.name %></a>
          <div class="pull-right">By:<a href="/users/<%= event.user.id %>"><%= event.user.name %></a></div>
          </h4>
          <div class="media">
              <a class="pull-left" href="/users/<%= event.user.id %>">
                  <img class="media-object" src="<%= event.photo.url(:thumb) %>" alt="<%= event.name %>">
              </a>
              <div class="media-body">
                  <h4 class="media-heading"><span class="pull-right">Duration:<%= event.duration %></span></h4>

              </div>
          </div>
          <h4><span class="pull-right">Date:<%= event.date %></span></h4>
          <h4>Venue:<%= event.venue %></h4>
      </div>
      <div id="event<%= event.id %>" class="panel-collapse collapse" style="height: 0px;">

          <div class="form-horizontal">
              <div style="margin:0;padding:0;display:inline"></div>
              <div class="form-group">
                  <label class="col-sm-4 control-label" style="padding:0" for="name">Description</label>
                  <div class="col-sm-8"><%= event.description %></div>
              </div>
              <div class="form-group">
                  <label class="col-sm-4 control-label" style="padding:0" for="name">URL</label>
                  <div class="col-sm-8"><%= event.url %>
                  </div>
              </div>
          </div>
      </div>
  </div>
 </div>
