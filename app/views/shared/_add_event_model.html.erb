<div class="modal fade" id="newevent" tabindex="-1" role="dialog" aria-labelledby="newEventForm" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="newEventForm">Add New Event</h4>
      </div>
      <div class="modal-body">
        <%= form_tag '/events', role: 'form' ,class:'form-horizontal',multipart: true  do %>

    <div class="form-group">
      <%= label_tag(:name, "Name" , class: 'col-sm-4 control-label') %>
    <div class="col-sm-8">
      <%= text_field_tag(:name,'', class: 'form-control', placeholder: 'Enter the name of event') %>
    </div>
    </div>

    <div class="form-group">
      <%= label_tag(:venue, "Venue" , class: 'col-sm-4 control-label') %>
    <div class="col-sm-8">
      <%= text_field_tag(:venue,'',class: 'form-control', placeholder: 'Venue of event') %>
    </div>
    </div>
    
    <div class="form-group">
      <%= label_tag(:date, "Date" ,class: 'col-sm-4 control-label') %>
    <div class="col-sm-8">
      <%= date_field(:event,:date, class: 'form-control') %>
    </div>
    </div>

    <div class="form-group">
      <%= label_tag(:duration, "Duration" ,class: 'col-sm-4 control-label') %>
    <div class="col-sm-8">
      <%= text_field_tag(:duration,'', class: 'form-control',placeholder: 'Duration of events') %>
    </div>
    </div>
    
    <div class="form-group">
      <%= label_tag(:description, "Description" ,class: 'col-sm-4 control-label') %>
    <div class="col-sm-8">
      <%= text_area_tag(:description,'', class: 'form-control',placeholder: 'Enter description of the book') %>
    </div>
    </div>

    <div class="form-group">
      <%= label_tag(:photo, "Photo" ,class: 'col-sm-4 control-label') %>
    <div class="col-sm-8">
      <%= file_field(:event, :photo, accept:'image/png,image/jpeg') %>
    </div>
    </div>

    <div class="form-group">
      <%= label_tag(:url, "Url" ,class: 'col-sm-4 control-label') %>
    <div class="col-sm-8">
      <%= text_field_tag(:url,'', class: 'form-control',placeholder: 'Url to the event') %>
    </div>
    </div>


    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>        
        <%= submit_tag("Add Event",class: "btn btn-primary", id: "saveevent") %>    
      </div> 
    
        <% end %>
      </div>
       
    </div>
  </div>
</div>