<%= render 'shared/header' %>
<div class="container-fuild">
  <div style="position: relative;display: inline-block;width:100%;">
  <div class="col-md-2">
    <!-- left sidebar -->
    <br>
    <%= render 'shared/leftsidebar' %>
  </div>
	<!-- New Book Form -->
  <%= render 'shared/add_book_model' %>
  <% if current_user.role.name == 'professor' %>
    <%= render 'shared/add_internship_model' %>
  <% end %>

  <div class="col-md-7 centralarea">
  <br>
  <!-- central area -->
    <div class="row">

	   <div id="newpost" class="col-md-8 well" style=" padding: 0; padding-bottom: 15px; ">
      <!-- new post -->
        <textarea class="postarea form-control" id="posta" placeholder="What is your Doubt? To tag a person use @ and to tag or create a topic use #"></textarea>
        <!-- <div class="btn-group" style="margin-top:10px">
          <button type="button" class="btn btn-success">
            Ask a Professor 
          </button>
        </div> -->
        <div class="btn-group" style="margin-top:10px;width:160px;margin-left:5px;">
         <select multiple class="form-control" id="profselect">
            <option></option>
            <% Professor.all.each do |p| %>
            <option value="<%= p.user.id %>"><%= p.user.name %></option>
            <% end %>
        </select>
        </div>
      <div class="btn-group">
      <input type="checkbox" id="anoncheckbox">Post as Anonymous
      </div>
      <div id="newpostbutton" style=" display: inline-block; position: absolute; right: 0;bottom:12px; padding: 0 10px; ">
      <button class="post">
        <img class="splash" src="/assets/watersplash_3.svg" alt="Splash!" />
        <img class="splash splash-2" src="/assets/watersplash_3.svg" alt="Splash!" />
        <img class="sub" src="/assets/sublogo_16.svg" class="Submarine" />
        <img class="submerge" src="/assets/submerge.svg" alt="Water" />
        <span class="main-text">
          <span class="submit">P</span>ost
        </span>
        <span class="sent-text">
          <span class="sent">Posted!</span>
        </span>
      </button>
      </div>
    </div>
    

      <!-- <div class="form-group">
        <label for="InputFile" style="margin-top:5px">File input</label>
        <input type="file" name="files" id="InputFile" data-url='/posts/file'>
      </div> -->
      
      </div>


    <br >
    <div id="feeddata">
    <% @data.each do |ob| %>
      
      <% if ob.class == Post %>
      <% @posts = Array.new
         @posts << ob;
       %>
       <div class='posts'>
        <%= render 'shared/post' %>
        </div>
      <% elsif ob.class == Book %>
      <% @books = Array.new
         @books << ob;
       %>
       <div class='books'>
        <%= render 'shared/book' %>
        </div>
      <% elsif ob.class == Event %>
      <% @events = Array.new
         @events << ob;
       %>
       <div class='events'>
        <%= render 'shared/eventshow' %>
      </div>  
      <% end %>

    <% end %>
    </div>
  </div>
	
  <div>
    <!-- <ul class="rightside">
      <li>
        <button id="addevent" class="btn" data-toggle='modal' data-target='#newevent'>Create a Event</button>
      </li>
    </ul> -->
    <br>
    <%= render 'shared/event' %>
  </div>

  <!-- New Event Form -->
  <%= render 'shared/add_event_model' %>
	
  
  </div>
</div>
