      <li>
        <a href="/users/<%= current_user.id%>">My Profile</a>
      </li>
    </ul>
  </div>
	

  <div class="col-md-8">
  <!-- central area -->
    <div class="row">
	   <div id="newpost" class="col-md-8">
      <!-- new post -->
        <textarea class="postarea" id="posta"></textarea>
      </div>
      <div id="newpost" class="col-md-4">
    	<button class="post">
        <img class="splash" src="/assets/watersplash_3.svg" alt="Splash!" />
        <img class="splash splash-2" src="/assets/watersplash_3.svg" alt="Splash!" />
        <img class="sub" src="/assets/sublogo_16.svg" class="Submarine" />
        <img class="submerge" src="/assets/submerge.svg" alt="Water" />
        <span class="main-text">
          <span class="submit">P</span>ost
        </span>
        <span class="sent-text">
          <span class="sent">Posted!</span>
        </span>
      </button>
      </div>
    </div>
    
    <div id='posts'>
      <% @posts.each do |post| %>
      <div class="col-md-7 singlepost" data-pid="<%= post.id %>">
        <div class="imagecontainer">
        <% if post.visibility_to_prof %>
        <%= image_tag(post.user.avatar.url,class: 'profilepic img-responsive') %>
        <% else %>
        <%= image_tag('/images/original/anonymous.png',class: 'profilepic img-responsive') %>
        <% end %>
        <span><%= post.user.username %></span>
        </div>
        <div class="posttext">
          <span class="view glyphicon glyphicon-plus-sign"></span>
          <% if post.user == current_user %>
          <span class="delete glyphicon glyphicon-remove-circle"></span>
          <% end %>
          <p class="ptext"><%= post.text %></p>
        </div>
        <!-- text: <%= post.text %><br/>
        tags: <%= post.tagged_users %><br/>
        visibility_to_prof: <br/>
        author:<%= post.user.username %><br/><br /> 
        <span class='up'>upvote</span>:<%= post.upvotes %>
        <span class='up'>downvote</span>:<%= post.downvotes %>
        <input placeholder="comment" type="text" name="comment">-->
        
      </div>
      <% end %>
    </div>
  </div>
	
