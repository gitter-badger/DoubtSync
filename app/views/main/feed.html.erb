<%= render 'shared/header' %>
<div class="container-fuild">
  <div style="position: relative;display: inline-block;width:100%;">
  <div class="col-md-2">
    <!-- left sidebar -->
    <ul class="leftside">
      <li>
        <a href="/users/<%= current_user.id%>"><button class="btn">My Profile</button></a>
      </li>
      <br>
      <li>
        <button id="addbook" class="btn" data-toggle='modal' data-target='#newbook'>Advertise a Book</button>
      </li>
    </ul>
  </div>
	<!-- New Book Form -->
  <%= render 'shared/add_book_model' %>

  <div class="col-md-7">
  <!-- central area -->
    <div class="row">

	   <div id="newpost" class="col-md-8 well">
      <!-- new post -->
        <textarea class="postarea form-control" id="posta"></textarea>
        <div class="btn-group" style="margin-top:10px">
          <button type="button" class="btn btn-success">
            Ask a Professor 
          </button>
        </div>
        <div class="btn-group" style="margin-top:10px;width:160px;">
         <select multiple class="form-control" id="profselect">
            <option></option>
            <% Professor.all.each do |p| %>
            <option value="<%= p.user.id %>"><%= p.user.name %></option>
            <% end %>
        </select>
        </div>
      <div class="btn-group">
      <input type="checkbox" id="anoncheckbox">Post as Anonymous
      </div>
      </div>

      <div id="newpostbutton" class="col-md-4">
    	<button class="post">
        <img class="splash" src="/assets/watersplash_3.svg" alt="Splash!" />
        <img class="splash splash-2" src="/assets/watersplash_3.svg" alt="Splash!" />
        <img class="sub" src="/assets/sublogo_16.svg" class="Submarine" />
        <img class="submerge" src="/assets/submerge.svg" alt="Water" />
        <span class="main-text">
          <span class="submit">P</span>ost
        </span>
        <span class="sent-text">
          <span class="sent">Posted!</span>
        </span>
      </button>
      </div>
    </div>
    
    <br >
    <div id='posts'>
    <%= render 'shared/post' %>
    </div>
  </div>
	
  <div class="col-md-3">
    <!-- <ul class="rightside">
      <li>
        <button id="addevent" class="btn" data-toggle='modal' data-target='#newevent'>Create a Event</button>
      </li>
    </ul> -->
    <%= render 'shared/event' %>
  </div>

  <!-- New Event Form -->
  <%= render 'shared/add_event_model' %>
	
  </div>
</div>
