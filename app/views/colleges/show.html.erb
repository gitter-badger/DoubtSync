<div>

	<%= form_tag 'ambassadorregistration' do  %>

  <div><%= label_tag :username %>
  <%= text_field_tag :username %>
  
  <div><%= label_tag :email %>
  <%= email_field_tag :email,@email %></div>

  <div><%= label_tag 'College Name' %>
	<%= text_field_tag :college_name,@college_name %></div>

  <div><%= label_tag :password %>
  <%= password_field_tag :password %></div>

  <div><%= label_tag :password_confirmation %>
  <%= password_field_tag :password_confirmation %></div>

  <div><%= submit_tag "Sign up and Create College" %></div>		
	<% end %>
</div>